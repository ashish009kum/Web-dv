<%- include("partials/header") %> 
<div class="container-fluid mt-3">
        <h1 class="text-center">Create a New Campground</h1>
    <div class="container mt-3">
        <div style="max-width: 400px; margin: auto;">
            <form style="display: flex; flex-direction: column;" action="/capground" method="POST">
                <input class="mt-0 form-control" type="text" name="name" placeholder="Title Of The Place">
                <input type="text" class="form-control" name="image" placeholder="Image Url">
                <input type="text" class="form-control" name="description" placeholder="Description">
                <input type="number" class="form-control" name="price" placeholder="Price In $" min="0.01" step="0.01">
                <button style="margin-top: 12px;" class="btn btn-primary btn-lg">Submit!</button>
            </form>
            <div>
                <a class="btn btn-sm btn-success" style="margin-top: 12px;" href="/">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %> 