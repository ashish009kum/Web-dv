<%- include("partials/header") %> 
<div class="container-fluid mt-3">
        <h1 class="text-center">Edit <%= a.tittle %> Campground</h1>
        <div class="container">
           <div style="max-width: 400px; margin: auto;">
                 <form style="display: flex; flex-direction: column;" action="/capground/<%= a._id %>?_method=PUT " method="POST">
                     <input class="mt-0 form-control" type="text" name="tittle"  value="<%= a.tittle %> ">
                     <input type="text" class="form-control" name="image" value="<%= a.image %> ">
                      <input type="text" class="form-control" name="description" value="<%= a.description %> ">
                     <input type="number" class="form-control" name="price" value="<%= a.price %>" min="0.01" step="0.01">
                     <button class="btn btn-primary btn-lg" style="margin-top: 10px;">Submit!</button>
                 </form>
                 <div>
                     <a class="btn btn-sm btn-success" style="margin-top: 10px;" href="/">Go Back</a>
                 </div>
            </div>
         </div>
</div>

<%- include("partials/footer") %> 